# campos obrigatórios

ARQUIVO="sem_chave.csv"

NOMES="NOME ONIXSAT, DATA/HORA, LOCALIZAÇÃO, DISTÂNCIA DA COSTA, PROFUNDIDADE, VELOCIDADE, RUMO"
CAMPOS="o.embarcacao, o.datahora, $LOCAL, $DISTANCIA_COSTA, func_prof(st_value(g.rast,o.geog)), o.veloc, o.direcao"
TABELAS="onixsat o, gebco g, costa_cartadhn d"
CONDICOES="o.embarcacao not in (select embarcacao from nova_chave_onixsat)"
